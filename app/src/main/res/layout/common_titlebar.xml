<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- 整个titlebar -->

    <RelativeLayout
        android:id="@+id/common_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!-- 左边按钮和图片 -->

        <LinearLayout
            android:id="@+id/common_titlebar_ly_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/common_titlebar_img_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/common_titlebar_tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <!-- 中间文字 -->

        <TextView
            android:id="@+id/common_titlebar_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_medium" />
        <!-- 右边的布局 -->

        <LinearLayout
            android:id="@+id/common_titlebar_ly_right"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/common_titlebar_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_titlebar_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/common_titlebar_img_right_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <Button
                android:id="@+id/common_titlebar_btn_right"
                style="@style/button_style_1"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/common_titlebar_img_right_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>